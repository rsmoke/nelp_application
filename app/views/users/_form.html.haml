= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :google_id
    = f.text_field :google_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email_address
    = f.text_field :email_address
  .field
    = f.label :avatar_url
    = f.text_field :avatar_url
  .field
    = f.label :locale
    = f.text_field :locale
  .field
    = f.label :hosted_domain
    = f.text_field :hosted_domain
  .actions
    = f.submit 'Save'
